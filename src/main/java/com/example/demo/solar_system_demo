double sunMass = 1.989e30;
    double mercuryMass = 3.3011e23;
    double venusMass = 4.8675e24;
    double earthMass = 5.972e24;
    double marsMass = 6.4171e23;
    double jupiterMass = 1.8982e27;
    double saturnMass = 5.6834e26;
    double uranusMass = 8.6810e25;
    double neptuneMass = 1.02413e26;

    // Average orbital distances in meters (mean distance from Sun)
    double mercuryDist = Units.distUnitsToSimUnits(5.79e10);
    double venusDist = Units.distUnitsToSimUnits(1.082e11);
    double earthDist = Units.distUnitsToSimUnits(1.496e11);
    double marsDist = Units.distUnitsToSimUnits(2.279e11);
    double jupiterDist = Units.distUnitsToSimUnits(7.785e11);
    double saturnDist = Units.distUnitsToSimUnits(1.433e12);
    double uranusDist = Units.distUnitsToSimUnits(2.877e12);
    double neptuneDist = Units.distUnitsToSimUnits(4.503e12);

    // Orbital velocities in meters per second (average orbital speeds)
    double mercuryVel = Units.distUnitsToSimUnits(47400);
    double venusVel = Units.distUnitsToSimUnits(35020);
    double earthVel = Units.distUnitsToSimUnits(29780);
    double marsVel = Units.distUnitsToSimUnits(24130);
    double jupiterVel = Units.distUnitsToSimUnits(13070);
    double saturnVel = Units.distUnitsToSimUnits(9690);
    double uranusVel = Units.distUnitsToSimUnits(6810);
    double neptuneVel = Units.distUnitsToSimUnits(5430);

    // Add the Sun at the origin (stationary)
    planets.add(new Body(25, sunMass, new double[]{0.0, 0.0}, Color.ORANGE));

    // Add planets with initial position on x axis, and velocity on y axis (circular orbits approximation)
    planets.add(new Body(5, mercuryMass, new double[]{mercuryDist, 0.0}, Color.GRAY, new double[]{0.0, mercuryVel}));
    planets.add(new Body(7, venusMass, new double[]{venusDist, 0.0}, Color.BEIGE, new double[]{0.0, venusVel}));
    planets.add(new Body(8, earthMass, new double[]{earthDist, 0.0}, Color.BLUE, new double[]{0.0, earthVel}));
    planets.add(new Body(6, marsMass, new double[]{marsDist, 0.0}, Color.RED, new double[]{0.0, marsVel}));
    planets.add(new Body(15, jupiterMass, new double[]{jupiterDist, 0.0}, Color.BROWN, new double[]{0.0, jupiterVel}));
    planets.add(new Body(12, saturnMass, new double[]{saturnDist, 0.0}, Color.YELLOW, new double[]{0.0, saturnVel}));
    planets.add(new Body(10, uranusMass, new double[]{uranusDist, 0.0}, Color.LIGHTBLUE, new double[]{0.0, uranusVel}));
    planets.add(new Body(10, neptuneMass, new double[]{neptuneDist, 0.0}, Color.DARKBLUE, new double[]{0.0, neptuneVel}));